<!-- File: WebContent/WEB-INF/web.xml -->
<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         version="3.1">

    <display-name>Online Healthcare Management System</display-name>

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.healthcare.controller.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.healthcare.controller.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AdminDashboardServlet</servlet-name>
        <servlet-class>com.healthcare.controller.AdminDashboardServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminDashboardServlet</servlet-name>
        <url-pattern>/admin/dashboard</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AdminUserServlet</servlet-name>
        <servlet-class>com.healthcare.controller.AdminUserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminUserServlet</servlet-name>
        <url-pattern>/admin/user</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AdminSettingsServlet</servlet-name>
        <servlet-class>com.healthcare.controller.AdminSettingsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminSettingsServlet</servlet-name>
        <url-pattern>/admin/settings</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DoctorDashboardServlet</servlet-name>
        <servlet-class>com.healthcare.controller.DoctorDashboardServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DoctorDashboardServlet</servlet-name>
        <url-pattern>/doctor/dashboard</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DoctorAppointmentServlet</servlet-name>
        <servlet-class>com.healthcare.controller.DoctorAppointmentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DoctorAppointmentServlet</servlet-name>
        <url-pattern>/doctor/appointment</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>PatientDashboardServlet</servlet-name>
        <servlet-class>com.healthcare.controller.PatientDashboardServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PatientDashboardServlet</servlet-name>
        <url-pattern>/patient/dashboard</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>PatientAppointmentServlet</servlet-name>
        <servlet-class>com.healthcare.controller.PatientAppointmentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PatientAppointmentServlet</servlet-name>
        <url-pattern>/patient/appointment</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ProfileServlet</servlet-name>
        <servlet-class>com.healthcare.controller.ProfileServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProfileServlet</servlet-name>
        <url-pattern>/profile/update</url-pattern>
    </servlet-mapping>

    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
</web-app>
